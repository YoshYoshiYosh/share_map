users_list = '\
      <% @authorized_users.each do |user| %>\
        <% if current_user == user %>\
          <li><%= "#{user.email}（所有者）" %></li>\
        <% else %>\
          <li><%= user.email %></li>\
        <% end %>\
      <% end %>\
    ';

<% flash.each do |type, message| %>
<% if type == 'notice' %>
  $("#added-message").html('<p class="alert alert-success"><%= message %></p>')
  $("#result").html(users_list)
<% elsif type == 'warning' %>
  $("#added-message").html('<p class="alert alert-danger"><%= message %></p>')
<% end %>
<% end %>